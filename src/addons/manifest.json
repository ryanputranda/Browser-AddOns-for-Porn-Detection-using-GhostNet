{
  "manifest_version": 3,
  "name": "AI Safe Search",
  "version": "1.0.0",
  "description": "This addOns browser have purpose to protect your child from Pornography Content, Happy browsing!!! ;)",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*"
  ],
  "icons": {
    "128": "assets/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["assets/blur.css"],
      "run_at": "document_idle"
    }
  ]
}